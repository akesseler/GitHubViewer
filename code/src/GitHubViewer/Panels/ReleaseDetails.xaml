<UserControl x:Class="GitHubViewer.Panels.ReleaseDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid 
        Margin="10">
        <DockPanel>
            <Border 
                DockPanel.Dock="Top" 
                Padding="10" >
                <TextBlock 
                    x:Name="pageHeader"
                    Width="Auto"
                    FontSize="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" >
                    Repository Details
                </TextBlock>
            </Border>
            <Label 
                x:Name="backLabel"
                DockPanel.Dock="Top" 
                Margin="0, 0, 0, 10" 
                MouseLeftButtonUp="OnBackLabelMouseLeftButtonUp">
                <TextBlock 
                    Cursor="Hand" 
                    Foreground="Blue"
                    TextDecorations="Underline"
                    Text="Back to overview" />
            </Label>
            <Border 
                BorderThickness="1" 
                BorderBrush="{StaticResource DefaultBorderBrush}" >
                <ScrollViewer 
                    x:Name="detailsViewer"
                    DockPanel.Dock="Top"
                    Padding="5, 5, 5, 5"
                    VerticalScrollBarVisibility="Auto" 
                    HorizontalScrollBarVisibility="Auto">
                    <DockPanel
                        Width="{Binding ViewportWidth, RelativeSource={RelativeSource AncestorType={x:Type ScrollViewer}, Mode=FindAncestor}}">
                        <StackPanel 
                            DockPanel.Dock="Top"
                            x:Name="detailsContainer" />
                    </DockPanel>
                </ScrollViewer>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
